<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kirbybanman.travelclaimer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <application
        android:name=".core.TravelClaimerApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ClaimsListActivity"
            android:label="@string/app_name" android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewClaimActivity"
            android:label="@string/title_activity_new_claim" >
        </activity>
        <activity
            android:name=".IndividualClaimActivity"
            android:label="@string/title_activity_individual_claim" android:launchMode="singleTop" android:parentActivityName="com.kirbybanman.travelclaimer.ClaimsListActivity">
        </activity>
        <activity
            android:name=".EditClaimActivity"
            android:label="@string/title_activity_edit_claim" android:parentActivityName="com.kirbybanman.travelclaimer.IndividualClaimActivity">
        </activity>
    </application>

</manifest>
